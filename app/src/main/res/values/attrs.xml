<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IconedLabelView">
        <attr name="TitleText" format="string"/>
        <attr name="Icon" format="reference"/>
        <attr name="TextSize" format="integer"/>
        <attr name="TextColor" format="color"/>
        <attr name="IconColor" format="color"/>
        <attr name="HasIconColor" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MyRadioGroup">
        <attr name="caption" format="string"/>
        <attr name="textSize" format="integer"/>
        <attr name="textColor" format="color"/>
        <attr name="captionColor" format="color"/>
        <attr name="radioCount" format="integer"/>
        <attr name="hasCaption" format="boolean"/>
        <attr name="groupBackground" format="reference"/>
        <attr name="groupOrientation" format="integer">
            <flag name="horizontal" value="0"/>
            <flag name="vertical" value="1"/>
        </attr>
        <attr name="captionPostion" format="integer">
            <flag name="inside" value="0"/>
            <flag name="outside" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="MyCheckBox">
        <attr name="txtcaption" format="string"/>
        <attr name="txttextSize" format="integer"/>
        <attr name="txttextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ShadowTextView">
        <attr name="stxtcaption" format="string"/>
        <attr name="stxttextSize" format="dimension"/>
        <attr name="stxttextColor" format="color"/>
        <attr name="stxtshadowColor" format="color"/>
        <attr name="shadowDx" format="float"/>
        <attr name="shadowDy" format="float"/>
    </declare-styleable>

    <declare-styleable name="StrokeTextView">
        <attr name="stCaption" format="string"/>
        <attr name="stTextSize" format="dimension"/>
        <attr name="stTextColor" format="color"/>
        <attr name="stStrokeColor" format="color"/>
        <attr name="stStorkWidth" format="float"/>
        <attr name="stBackground" format="reference"/>
        <attr name="stTopMargin" format="dimension"/>
        <attr name="stBottomMargin" format="dimension"/>
        <attr name="stLeftMargin" format="dimension"/>
        <attr name="stRightMargin" format="dimension"/>
        <attr name="stxOffset" format="float"/>
        <attr name="styOffset" format="float"/>
        <attr name="stxPivote" format="float"/>
        <attr name="styPivote" format="float"/>
        <attr name="stScaleType" format="integer">
            <flag name="center" value="0"/>
            <flag name="fitCenter" value="1"/>
            <flag name="rightCenter" value="2"/>
            <flag name="leftCenter" value="3"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="PushImageView">
        <attr name="xOffset" format="float"/>
        <attr name="yOffset" format="float"/>
        <attr name="xPivote" format="float"/>
        <attr name="yPivote" format="float"/>
    </declare-styleable>

    <declare-styleable name="PushRelativeLayout">
        <attr name="plxOffset" format="float"/>
        <attr name="plyOffset" format="float"/>
        <attr name="plxPivote" format="float"/>
        <attr name="plyPivote" format="float"/>
    </declare-styleable>


</resources>