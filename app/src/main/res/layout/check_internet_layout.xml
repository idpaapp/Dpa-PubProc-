<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MenuColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:src="@drawable/wifi_error"
            android:tint="@color/primary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/messNoInternetConnection"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:layout_marginTop="60sp"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:layout_marginBottom="10sp"
            android:background="#40000000" />

        <RelativeLayout
            android:id="@+id/BtnMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30sp"
            android:paddingRight="30sp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_centerVertical="true"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:src="@drawable/back_s"
                android:tint="@color/secondary_text"/>

            <TextView
                android:textColor="@color/primary_text"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="اینترنت موبایل"
                android:layout_alignParentRight="true"
                android:layout_width="150sp"
                android:layout_height="40sp" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_alignParentRight="true"
                android:layout_width="24sp"
                android:layout_centerVertical="true"
                android:layout_height="24sp"
                android:tint="@color/secondary_text"
                android:src="@drawable/mobile_data"/>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10sp"
            android:background="#40000000" />

        <RelativeLayout
            android:id="@+id/BtnWifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30sp"
            android:paddingRight="30sp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_centerVertical="true"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:src="@drawable/back_s"
                android:tint="@color/secondary_text"/>

            <TextView
                android:textColor="@color/primary_text"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="تنظیمات Wi-Fi"
                android:layout_alignParentRight="true"
                android:layout_width="150sp"
                android:layout_height="40sp" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_alignParentRight="true"
                android:layout_width="24sp"
                android:layout_centerVertical="true"
                android:layout_height="24sp"
                android:tint="@color/secondary_text"
                android:src="@drawable/wifi_settings"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10sp"
            android:background="#40000000" />

        <RelativeLayout
            android:id="@+id/BtnRetry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backbtnfill"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:gravity="center"
            >

            <android.support.v7.widget.AppCompatImageView
                android:layout_toRightOf="@+id/txtRetry"
                android:layout_centerVertical="true"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:src="@drawable/retry"
                android:tint="@color/icons"/>

            <TextView
                android:id="@+id/txtRetry"
                android:textColor="@color/icons"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="تلاش مجدد"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="12sp" />


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>